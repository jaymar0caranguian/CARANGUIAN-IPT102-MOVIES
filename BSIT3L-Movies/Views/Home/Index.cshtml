@model List<MovieViewModel>

@{
    ViewData["Title"] = "Home Page";
}


<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>IMDb Rating</th>
            <th>Popularity</th>
            <th>Release Year</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td ><a href = "/movies/getmovie/@movie.Id" > @movie.Name </a></td>
                <td>@movie.IMDbRating</td>
                <td>@movie.Popularity</td>
                <td>@movie.ReleaseYear</td>
                <td>@movie.Genre</td>
            </tr>
        }
    </tbody>
</table>

